<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">

    <servlet>
        <servlet-name>FontUploadServlet</servlet-name>
        <servlet-class>fontdragr.FontUploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FontListingServlet</servlet-name>
        <servlet-class>fontdragr.FontListingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FontUploadServlet</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FontListingServlet</servlet-name>
        <url-pattern>/gallery/*</url-pattern>
    </servlet-mapping>
</web-app>
